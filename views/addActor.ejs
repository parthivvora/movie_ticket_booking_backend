<%- include('header') %>

<section class="content blog-page">
  <div class="block-header">
    <div class="row">
      <div class="col-lg-7 col-md-5 col-sm-12">
        <h2>
          Add Actor
          <small>Welcome to Boleto</small>
        </h2>
      </div>
      <div class="col-lg-5 col-md-7 col-sm-12">
        <ul class="breadcrumb float-md-right">
          <li class="breadcrumb-item">
            <a href="/admin/dashboard"><i class="zmdi zmdi-home"></i> Home</a>
          </li>
          <li class="breadcrumb-item active">Actor</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="body">
            <% if (messages.success) { %>
            <div class="alert alert-success" role="alert">
              <%= messages.success %>
            </div>
            <% } %> <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
              <%= messages.error %>
            </div>
            <% } %>
            <form
              action="/admin/add-actor"
              id="frmFileUpload"
              class="m-b-20 m-t-20"
              method="post"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Enter Actor Name"
                  name="actorName"
                />
              </div>
              <div class="">
                <label for="actorImage" class="form-label">Actor Image</label>
                <input type="file" class="form-control" name="actorImage" accept="image/*" />
              </div>
              <button
                type="submit"
                class="btn btn-primary btn-round waves-effect m-t-20"
              >
                Post
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('footer') %>
